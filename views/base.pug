block variables

doctype html

if !isAJAX
  html(
    class=isPhone || isTablet ? 'mobile' : 'desktop'
    lang="en"
  )
    head
      meta(charset="UTF-8")
      meta(name="viewport" content="width=device-width, initial-scale=1.0")

      base(href="/")

      title pochi-tamba

      meta(name="description" content="pochi")

      link( rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png")
      link( rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png")
      link( rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png")
      link( rel="manifest" href="/site.webmanifest")
      link( rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5")
      meta( name="msapplication-TileColor" content="#da532c")
      meta( name="theme-color" content="#ffffff")

      meta(property="og:type" content="website")
      meta(property="og:title" content="pochi")
      meta(property="og:description" content="portfolio")
      meta(property="og:image" content="")

      meta(name="twitter:card" content="summary_large_image")
      meta(name="twitter:title" content="@pochi-tamba")
      meta(name="twitter:description" content="portfolio")
      meta(name="twitter:image" content="")

      link(rel="preconnect" href="https://www.google-analytics.com")

      style
        include ../public/main.css

    body
      include ./partials/preloader
      include ./partials/navigation
      .content#content(data-template=template)
        block body
      include ./partials/noscript


      script(async src=getVersionedPath('/main.js'))
else
  html(lang="en")
    head
      title pochi-tamba

    body
      .content#content(data-template=template)
        block body
