extends ../base.pug

block variables
  - var template = 'home'

block body
  .home
    .home__content
      section.intro
        .intro__content
          .title
            h2 Life / Leadership Coach
          .name__content
            .name
              h1 Pochi 
                br
                | Tamba
            .quote
              p Pochi means "the charity of God"
          br
          .image
            img(src='/images/pochi.jpg' alt='pochi')
          .writeup
            p I am TV producer and also a project&nbsp;manager
              br 
              | who spends a good part of her free time 
              br 
              | empowering others in different ways.
            br
            br
            br
            br
            .cta
              .btn
                a(href='/about')
                  span About me


      section.intro__work
        .intro__work__content
          .intro__work__title
            h2 Latest projects

          .intro__work__projects
            .intro__work__project
              .intro__work__project__img
                img(src="/images/project1.jpg" alt="")
              .intro__work__project__title
                h2 darkroom
              .intro__work__project__cta
                a(href='/projects/darkroom') view project

            .intro__work__project
              .intro__work__project__img
                img(src="/images/project2.jpg" alt="")
              .intro__work__project__title
                h2 portraits
              .intro__work__project__cta 
                a(href='/projects/portraits') view project

            .intro__work__project
              .intro__work__project__img
                img(src="/images/project1.jpg" alt="")
              .intro__work__project__title
                h2 filming
              .intro__work__project__cta
                a(href='/projects/filming') view project

            .intro__work__project
              .intro__work__project__img
                img(src="/images/project2.jpg" alt="")
              .intro__work__project__title
                h2 capture
              .intro__work__project__cta 
                a(href='/projects/capture') view project
          .cta
            .btn
              a(href='/projects')
                span All projects


      section.review
        .intro__reviews__content
          .intro__reviews__title
            h2 Client reviews

          .intro__reviews
            .intro__client__review
              .intro__review__client 
                img(src="/images/r1.png" alt="")
              .intro__review__content__details
                .intro__reviews__client__details Hodna Nuernberg 
                .intro__review__text__details
